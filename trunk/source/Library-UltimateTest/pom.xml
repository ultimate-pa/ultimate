<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.uni_freiburg.informatik.ultimate</groupId>
	<artifactId>de.uni_freiburg.informatik.ultimate.lib.test</artifactId>
	<version>0.2.1</version>
	<packaging>eclipse-plugin</packaging>

	<parent>
		<artifactId>mavenparent</artifactId>
		<groupId>de.uni_freiburg.informatik.ultimate</groupId>
		<version>0.2.1</version>
		<relativePath>../BA_MavenParentUltimate/pom.xml</relativePath>
	</parent>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>${maven-antrun-version}</version>
				<executions>
					<execution>
						<id>generate parser sources</id>
						<phase>generate-sources</phase>
						<configuration>
							<target>
								<echo>Building rundefinition with xjc</echo>
								<echo>Library-UltimateCore: workspaceDir is ${workspaceDir}</echo>
								<echo>Library-UltimateCore: rundefDir is ${benchexecDir}</echo>
<!--
								<exec executable="xjc" failonerror="true" dir="${project.basedir}">
									<arg value="-d" />
									<arg value="${workspaceDir}/Library-UltimateTest/src" />
									<arg value="-p" />
									<arg value="de.uni_freiburg.informatik.ultimate.test.benchexec.benchmark" />
									<arg value="${benchexecDir}/benchmark-1.9.xsd" />
								</exec>
-->
								<taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask">
							    	<classpath>
							        	<fileset dir="${baSharedJarsDir}" includes="*.jar"/>
							    	</classpath>
								</taskdef>
								
								<xjc schema="${benchexecDir}/benchmark-1.9.xsd" package="de.uni_freiburg.informatik.ultimate.test.benchexec.benchmark" destdir="${workspaceDir}/Library-UltimateTest/src">
									<produces dir="${workspaceDir}/Library-UltimateTest/src/de.uni_freiburg.informatik.ultimate.test.benchexec.benchmark" includes="**/*.java"/>
								</xjc>
								
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>${maven-clean-version}</version>
				<configuration>
					<filesets>
						<fileset>
							<directory>${benchexecDir}</directory>
							<excludes>
							<exclude>*.xml</exclude>
							<exclude>*.xsd</exclude>
							<exclude>jaxb.properties</exclude>
							</excludes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
