<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>net.sourceforge.czt</groupId>
    <artifactId>czt</artifactId>
    <version>1.5-SNAPSHOT</version>
  </parent>
  <artifactId>parser-zpatt</artifactId>
  <packaging>jar</packaging>
  <name>CZT Z Pattern Parser</name>
  <description>
    Provides classes for parsing and printing Z Pattern specifications.
  </description>
  <dependencies>
    <dependency>
      <groupId>${czt.groupId}</groupId>
      <artifactId>parser</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>net.sourceforge.czt</groupId>
        <artifactId>parser-src</artifactId>
        <executions>
          <execution>
            <configuration>
              <dialect>zpatt</dialect>
            </configuration>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>net.sourceforge.czt</groupId>
        <artifactId>maven-jflex-plugin</artifactId>
        <executions>
          <execution>
            <phase>process-sources</phase>
            <configuration>
              <sourceDirectory>${project.build.directory}/generated-sources/parser-src-jflex</sourceDirectory>
            </configuration>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>net.sourceforge.czt</groupId>
        <artifactId>maven-cup-plugin</artifactId>
        <executions>
          <execution>
            <phase>process-sources</phase>
            <configuration>
              <sourceDirectory>${project.build.directory}/generated-sources/parser-src-cup</sourceDirectory>
            </configuration>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
