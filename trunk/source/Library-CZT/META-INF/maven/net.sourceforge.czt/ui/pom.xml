<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>net.sourceforge.czt</groupId>
    <artifactId>czt</artifactId>
    <version>1.5</version>
  </parent>
  <artifactId>ui</artifactId>
  <packaging>jar</packaging>
  <name>CZT User Interface</name>
  <description>
    Provides a user interface for CZT.
  </description>
  <dependencies>
    <dependency>
      <groupId>${czt.groupId}</groupId>
      <artifactId>zeves</artifactId>
      <version>1.5-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>${czt.groupId}</groupId>
      <artifactId>zlive</artifactId>
    </dependency>
    <dependency>
      <groupId>${czt.groupId}</groupId>
      <artifactId>typechecker-oz</artifactId>
    </dependency>
    <dependency>
      <groupId>${czt.groupId}</groupId>
      <version>1.5-SNAPSHOT</version>
      <artifactId>typechecker-circus</artifactId>
    </dependency>
    <dependency>
      <groupId>${czt.groupId}</groupId>
      <artifactId>parser-ozpatt</artifactId>
    </dependency>
    <dependency>
      <groupId>${czt.groupId}</groupId>
      <artifactId>specreader</artifactId>
    </dependency>
    <dependency>
      <groupId>${czt.groupId}</groupId>
      <version>1.5-SNAPSHOT</version>
      <artifactId>domainchecker</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <configuration>
              <descriptorRefs>
                <descriptorRef>jar-with-dependencies</descriptorRef>
              </descriptorRefs>
              <archive>
                <manifest>
                  <mainClass>net.sourceforge.czt.ui.Main</mainClass>
                </manifest>
              </archive>
            </configuration>
            <goals>
              <goal>attached</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>install</phase>
            <configuration>
              <tasks>
                <property name="dir" location="../lib" />
                <mkdir dir="${dir}" />
                <copy failonerror="false" file="${project.build.directory}/${artifactId}-${version}-jar-with-dependencies.jar" tofile="${dir}/czt.jar" />
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
	<excludes>
	  <exclude>**/images/*</exclude>
	</excludes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>false</filtering>
	<includes>
	  <include>**/images/*.png</include>
	</includes>
      </resource>
    </resources>
  </build>
</project>