      <plugin>
        <groupId>net.sourceforge.czt</groupId>
        <artifactId>parser-src</artifactId>
        <executions>
          <execution>
            <configuration>
              <dialect>circus</dialect>
              <templateDirectory>${basedir}/../parser-src/src/main/resources/templates</templateDirectory>
              <!--<templateDirectory>${project.build.directory}/generated-sources/templates</templateDirectory>-->
              <!--<templateDirectory>C:/research/tools/java/sourceforge/czt/0.5.2/trunk/parser-src/src/main/resources/templates</templateDirectory>-->
            </configuration>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>      
      <plugin>
        <groupId>net.sourceforge.czt</groupId>
        <artifactId>maven-jflex-plugin</artifactId>
        <executions>
          <execution>
            <phase>process-sources</phase>
            <configuration>
              <sourceDirectory>${project.build.directory}/generated-sources/parser-src-jflex</sourceDirectory>
              <templateDirectory>${basedir}/../parser-src/src/main/resources/templates</templateDirectory>
            </configuration>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>net.sourceforge.czt</groupId>
        <artifactId>maven-cup-plugin</artifactId>
        <executions>
          <execution>
            <phase>process-sources</phase>
            <configuration>
              <sourceDirectory>${project.build.directory}/generated-sources/parser-src-cup</sourceDirectory>              
              <!--
              <dumpStates>true</dumpStates>
              <dumpGrammar>true</dumpGrammar>              
              <dumpTables>false</dumpTables>
              -->
            </configuration>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>    
