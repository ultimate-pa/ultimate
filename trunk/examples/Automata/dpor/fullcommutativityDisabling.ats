     alphabet      = {a b c},
     states        = {eps A AB ABC AC ACB B BA BAC BC BCA C CA CAB CB CBA},
     initialStates = {eps},
     finalStates   = {ABC ACB BAC BCA CAB CBA},
     transitions   = {
         (eps a A)
         (eps b B)
         (eps c C)
         (A   b AB)
         (A   c AC)
         (B   a BA)
         (B   c BC)
         (C   a CA)
         (C   b CB)
         (AB  c ABC)
         (AC  b ACB)
         (BA  c BAC)
         (BC  a BCA)
