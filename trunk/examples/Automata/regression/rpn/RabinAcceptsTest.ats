RabinPetriNet testGetResultWithEmptyStem = (
	alphabet = {b c},
	places = {p2 p3},
	transitions = { ({p2} b {p3}) ({p3} c {p2}) },
	initialMarking = {p1},
	acceptingPlaces = {p2},
	finitePlaces = {}
);

assert(rabinAccepts(testGetResultWithEmptyStem, [, b c]));


RabinPetriNet testGetResultWithNonTrivialLoopPlaces = (
	alphabet = {a b},
	places = {p1 p2 p3 p4 p5 p6 p7},
	transitions = { ({p1} a {p2}) ({p2} b {p3}) ({p3} b {p4}) ({p4} b {p5}) ({p5} b {p6}) ({p6} b {p7}) ({p7} b {p6}) },
	initialMarking = {p1},
	acceptingPlaces = {p6},
	finitePlaces = {}
);

assert(rabinAccepts(testGetResultWithNonTrivialLoopPlaces, [a , b]));

RabinPetriNet testGetResultWithNonTrivialLoopPlaces2 = (
	alphabet = {a b},
	places = {p1 p2 p3 p4 p5 p6 p7},
	transitions = { ({p1} a {p2}) ({p2} b {p3}) ({p3} b {p4}) ({p4} b {p5}) ({p5} b {p6}) ({p6} b {p7}) ({p7} b {p6}) },
	initialMarking = {p1},
	acceptingPlaces = {p5},
	finitePlaces = {}
);

assert(!rabinAccepts(testGetResultWithNonTrivialLoopPlaces2, [a , b]));


RabinPetriNet testGetResultWithNondeterministicTransitions = (
	alphabet = {a b c},
	places = {p1 p2 p3},
	transitions = { ({p1} a {p2}) ({p2} b {p3})	({p3} c {p2}) },
	initialMarking = {p1},
	acceptingPlaces = {p3},
	finitePlaces = {}
);

assert(rabinAccepts(testGetResultWithNondeterministicTransitions, [a , b c]));

RabinPetriNet testGetResultWithNondeterministicTransitionsAndNonAcceptingLoop = (
	alphabet = {a b c},
	places = {p1 p2 p3 p4},
	transitions = { ({p1} a {p2}) ({p2} b {p3}) ({p2} b {p4}) ({p3} c {p2}) },
	initialMarking = {p1},
	acceptingPlaces = {},
	finitePlaces = {}
);

assert(!rabinAccepts(testGetResultWithNondeterministicTransitionsAndNonAcceptingLoop, [a , b c]));

RabinPetriNet testGetResultWithDoubleLoop = (
	alphabet = {a b c},
	places = {p0 p1 p2 p3},
	transitions = { ({p1 p0} a {p2 p3}) ({p2} b {p2}) ({p3} c {p3}) },
	initialMarking = {p0 p1},
	acceptingPlaces = {p2},
	finitePlaces = {}
);

assert(rabinAccepts(testGetResultWithDoubleLoop, [a , b c]));
assert(rabinAccepts(testGetResultWithDoubleLoop, [a , b]));
assert(rabinAccepts(testGetResultWithDoubleLoop, [a , b c b]));
assert(rabinAccepts(testGetResultWithDoubleLoop, [a , c c b]));
assert(!rabinAccepts(testGetResultWithDoubleLoop, [, b]));
assert(!rabinAccepts(testGetResultWithDoubleLoop, [a , c]));
assert(!rabinAccepts(testGetResultWithDoubleLoop, [a , c c]));
